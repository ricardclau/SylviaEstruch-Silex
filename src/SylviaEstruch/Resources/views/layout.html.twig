{% spaceless %}
<!DOCTYPE html>
<html lang="{{ app.session.get('locale') }}">
<head>
    <meta charset="utf-8">
    <meta content="index,follow" name="robots">
    <meta content="{% block description %}{{ 'common.meta.description' | trans }}{% endblock %}" name="description">
    <meta content="{% block keywords %}{{ 'common.meta.keywords' | trans }}{% endblock %}" name="keywords">
    <meta content="7 days" name="revisit-after">
    <title>SylviaEstruch.com{% block title %}{% endblock %}</title>
    <link href="/css/01-normalize.css" type="text/css" rel="stylesheet">
    <link href="/css/10-style.css" type="text/css" rel="stylesheet">
    <link href="/css/30-lightbox.css" type="text/css" rel="stylesheet">
    <link rel="shortcut icon" href="/favicon.ico">
    <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body>
<div id="container">
    <header>
        <nav id="langs">
            <ul>
                {% if app.session.get('locale') != 'es' %}<li><a href="{{ path('homepage', {'locale' : 'es'}) }}">Castellano</a></li>{% endif %}
                {% if app.session.get('locale') != 'ca' %}<li><a href="{{ path('homepage', {'locale' : 'ca'}) }}">Català</a></li>{% endif %}
                {% if app.session.get('locale') != 'en' %}<li><a href="{{ path('homepage', {'locale' : 'en'}) }}">English</a></li>{% endif %}
            </ul>
        </nav>
        <div id="logo">
            <a href="{{ path('homepage', {'locale' : app.session.get('locale') }) }}">
                <img src="/images/logo.gif" />
            </a>
            <h1>
                <span>{{ 'common.header.description1' | trans }}</span>
                <span>{{ 'common.header.description2' | trans }}</span>
            </h1>
        </div>
    </header>
    <nav id="menu">
        <ul class="sections clearfix">
            <li><a href="{{ path('biografia', {'locale' : app.session.get('locale') }) }}">{{ 'common.secciones.biografia' | trans }}</a></li>
            <li><a href="{{ path('pintura', {'locale' : app.session.get('locale') }) }}">{{ 'common.secciones.pintura' | trans }}</a></li>
            <li><a href="{{ path('restauracion', {'locale' : app.session.get('locale') }) }}">{{ 'common.secciones.restauracion' | trans }}</a></li>
            <li><a href="{{ path('disenyo', {'locale' : app.session.get('locale') }) }}">{{ 'common.secciones.diseño' | trans }}</a></li>
            <li><a href="{{ path('teatro', {'locale' : app.session.get('locale') }) }}">{{ 'common.secciones.teatro' | trans }}</a></li>
            <li><a href="{{ path('contacto' , {'locale' : app.session.get('locale') }) }}">{{ 'common.secciones.contacto' | trans }}</a></li>
        </ul>
        {% block subsections %}
        {% endblock %}
    </nav>
    {% block content %}{% endblock %}
    <footer>www.sylviaestruch.com</footer>
    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/jquery.lightbox-0.5.pack.js"></script>
    <script type="text/javascript" src="/js/funciones.js"></script>
    <script type="text/javascript" src="{{ path('frasesjs', {'locale' : app.session.get('locale') }) }}"></script>
</div>
</body>
</html>
{% endspaceless %}